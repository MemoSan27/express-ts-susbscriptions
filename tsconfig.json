{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es2016",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,            
    },
    "include": ["src/**/*.ts"]
}

